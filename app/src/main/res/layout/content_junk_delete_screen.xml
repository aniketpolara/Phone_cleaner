<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_btn_layout"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <ExpandableListView
            android:id="@+id/junk_exp_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:childDivider="@color/sidebar_header_color"
            android:divider="@color/sidebar_header_color"
            android:dividerHeight="6dp"
            android:groupIndicator="@null"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/junk_rectangle">

        <TextView
            android:id="@+id/junkclean_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="@string/mbc_delete_junk"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

    </RelativeLayout>

</RelativeLayout>
