                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_turbo_cleaner_noti_detail"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.7"
                        android:fontFamily="@font/lato_regular"
                        android:text="Remind me to clean unwanted social media files"
                        android:textColor="@color/white"
                        android:textSize="13dp" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <com.codersroute.flexiblewidgets.FlexibleSwitch
                        android:id="@+id/noti_child_switch5"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:checked="false"
                        ads:backgroundColorOnSwitchOff="@color/sidebar_header_color"
                        ads:backgroundColorOnSwitchOn="@color/switchon"
                        ads:strokeColorOnSwitchOff="@color/corner_color"
                        ads:strokeColorOnSwitchOn="@color/colorPrimary"
                        ads:thumbColorOnSwitchOff="@color/corner_color"
                        ads:thumbColorOnSwitchOn="@color/white" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/junk_corner"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/noti_whatsapp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:weightSum="2.7">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center_vertical"
                        android:text="Whatsapp Cleaner"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_whtsapp_noti_detail"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.7"
                        android:fontFamily="@font/lato_regular"
                        android:text="Remind me to manage whatsapp \n junk files"
                        android:textColor="@color/white"
                        android:textSize="13dp" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <com.codersroute.flexiblewidgets.FlexibleSwitch
                        android:id="@+id/noti_child_switch10"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:checked="false"
                        ads:backgroundColorOnSwitchOff="@color/sidebar_header_color"
                        ads:backgroundColorOnSwitchOn="@color/switchon"
                        ads:strokeColorOnSwitchOff="@color/corner_color"
                        ads:strokeColorOnSwitchOn="@color/colorPrimary"
                        ads:thumbColorOnSwitchOff="@color/corner_color"
                        ads:thumbColorOnSwitchOn="@color/white" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/junk_corner"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/noti_notification_manager" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:weightSum="2.7">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center_vertical"
                        android:text="Notification Cleaner"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_noti_cleaner_noti_detail"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.7"
                        android:fontFamily="@font/lato_regular"
                        android:text="Remind me to manage Notification"
                        android:textColor="@color/white"
                        android:textSize="13dp" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <com.codersroute.flexiblewidgets.FlexibleSwitch
                        android:id="@+id/noti_child_switch11"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:checked="false"
                        ads:backgroundColorOnSwitchOn="@color/switchon"
                        ads:backgroundColorOnSwitchOff="@color/sidebar_header_color"
                        ads:strokeColorOnSwitchOff="@color/corner_color"
                        ads:strokeColorOnSwitchOn="@color/colorPrimary"
                        ads:thumbColorOnSwitchOff="@color/corner_color"
                        ads:thumbColorOnSwitchOn="@color/white" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
