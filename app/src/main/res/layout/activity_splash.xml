<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sidebar_header_color"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/activity_splash_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <View
            android:id="@+id/vector"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:alpha="0.5"
            android:background="@drawable/big_star" />

        <View
            android:id="@+id/vector2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:alpha="0.5"
            android:background="@drawable/big_star" />


        <View
            android:id="@+id/vector3"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="250dp"
            android:alpha="0.5"
            android:background="@drawable/half_star" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_splash"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_splash_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_splash"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_regular"
                android:text="Phone Cleaner"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>

