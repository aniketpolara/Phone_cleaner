<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sidebar_header_color"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/card_corner"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ignorelistitemimage"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginStart="@dimen/activity_horizontal_marginsmall"
            android:layout_marginLeft="@dimen/activity_horizontal_marginsmall"
            android:padding="@dimen/activity_horizontal_marginbig"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/ignorelistitemapp"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/checkcontainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6dp">

            <com.codersroute.flexiblewidgets.FlexibleSwitch
                android:id="@+id/ignorelistitemcheck"
                android:layout_width="47dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:checked="true"
                ads:backgroundColorOnSwitchOff="@color/sidebar_header_color"
                ads:backgroundColorOnSwitchOn="@color/switchon"
                ads:strokeColorOnSwitchOff="@color/corner_color"
                ads:strokeColorOnSwitchOn="#0495ED"
                ads:thumbColorOnSwitchOff="@color/corner_color"
                ads:thumbColorOnSwitchOn="@color/white" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
