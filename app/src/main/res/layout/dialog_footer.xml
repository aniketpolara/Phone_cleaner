<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center_horizontal"
    android:background="@color/sidebar_header_color"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/cancel_corner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mbc_cancel_button_label"
            android:fontFamily="@font/lato_bold"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />
    </RelativeLayout>


    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/select"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/squre_rectangle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_bold"
            android:text="Select"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>
</LinearLayout>
