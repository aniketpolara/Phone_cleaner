<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/junk_corner"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_ignoreapp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:src="@drawable/ic_android" />

        <TextView
            android:id="@+id/tvsocial_app_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_vertical"
            android:text="@string/mbc_app_cache"
            android:textColor="@color/white" />

        <com.codersroute.flexiblewidgets.FlexibleSwitch
            android:id="@+id/ignore_onoff"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:checked="true"
            ads:backgroundColorOnSwitchOn="@color/switchon"
            ads:backgroundColorOnSwitchOff="@color/sidebar_header_color"
            ads:strokeColorOnSwitchOff="@color/corner_color"
            ads:strokeColorOnSwitchOn="#0495ED"
            ads:thumbColorOnSwitchOff="@color/corner_color"
            ads:thumbColorOnSwitchOn="@color/white" />
    </LinearLayout>
</LinearLayout>
