<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/sidebar_header_color"
    android:layout_marginBottom="@dimen/activity_horizontal_marginsmall">

    <LinearLayout
        android:id="@+id/layout_"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/card_corner"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appitem_image"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginStart="@dimen/activity_horizontal_marginsmall"
            android:padding="@dimen/activity_horizontal_marginbig" />

        <TextView
            android:id="@+id/appitem_name"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="1"
            android:ellipsize="end"
            android:ems="20"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:id="@+id/appitem_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_regular"
            android:layout_marginEnd="3dp"
            android:text="" />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/appitem_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:button="@drawable/photo_custom_checkbox"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:padding="7dp"/>

    </LinearLayout>
</LinearLayout>
